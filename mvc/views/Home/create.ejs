        document.addEventListener("DOMContentLoaded", () => {
          const form = document.getElementById("createCourseForm");
        
          // --- ELEMENTOS DO CURSO ---
          const cursoInput = document.getElementById("nomeCursoInput");
          const cursoDropdown = document.getElementById("dropdownCursos");
          const cursoItems = document.querySelectorAll(".curso-item");
          const cursoHidden = document.getElementById("nomeCursoHidden");
          const cursoError = document.getElementById("nomeCursoError");
        
          // --- ELEMENTOS DO DOCENTE ---
          const docenteInput = document.getElementById("docenteInput");
          const docenteDropdown = document.getElementById("dropdownDocentes");
          const docenteItems = document.querySelectorAll(".docente-item");
          const docenteHidden = document.getElementById("docenteHidden");
          const docenteError = document.getElementById("docenteError");
        
          // Fun√ß√£o gen√©rica para combo dropdown filtr√°vel
          function configurarDropdown(input, dropdown, items, hidden, error, label) {
            input.addEventListener("focus", () => {
              dropdown.classList.remove("hidden");
            });
        
            input.addEventListener("input", () => {
              const search = input.value.toLowerCase();
              items.forEach(item => {
                const value = item.dataset.value.toLowerCase();
                item.style.display = value.includes(search) ? "block" : "none";
              });
              dropdown.classList.remove("hidden");
            });
        
            items.forEach(item => {
              item.addEventListener("click", () => {
                input.value = item.dataset.value;
                hidden.value = item.dataset.id;
                dropdown.classList.add("hidden");
                error.classList.add("hidden");
                input.classList.remove("border-red-500");
              });
            });
        
            document.addEventListener("click", (e) => {
              if (!e.target.closest(`#${dropdown.id}`) && !e.target.closest(`#${input.id}`)) {
                dropdown.classList.add("hidden");
              }
            });
        
            input.addEventListener("blur", () => {
              validarCampo(input, items, hidden, error, label);
            });
          }
        
          // Valida√ß√£o do campo
          function validarCampo(input, items, hidden, error, label) {
            const valor = input.value.trim().toLowerCase();
            const item = Array.from(items).find(i => i.dataset.value.toLowerCase() === valor);
        
            if (!item) {
              error.textContent = `Selecione um ${label} v√°lido da lista.`;
              error.classList.remove("hidden");
              input.classList.add("border-red-500");
              hidden.value = "";
              return null;
            }
        
            error.classList.add("hidden");
            input.classList.remove("border-red-500");
            hidden.value = item.dataset.id;
            return item.dataset.id;
          }
        
          // Configura os dois combos
          configurarDropdown(cursoInput, cursoDropdown, cursoItems, cursoHidden, cursoError, "curso");
          configurarDropdown(docenteInput, docenteDropdown, docenteItems, docenteHidden, docenteError, "docente");
        
          // Valida√ß√£o ao enviar o formul√°rio
          form.addEventListener("submit", (e) => {
            const idCurso = validarCampo(cursoInput, cursoItems, cursoHidden, cursoError, "curso");
            const idDocente = validarCampo(docenteInput, docenteItems, docenteHidden, docenteError, "docente");
        
            if (!idCurso || !idDocente) {
              e.preventDefault();
              if (!idCurso) cursoInput.focus();
              else docenteInput.focus();
            }
          });
        });
    </script>
        
